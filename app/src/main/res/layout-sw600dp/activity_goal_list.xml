<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frags"
    android:divider="?android:attr/dividerHorizontal"
    tools:context="com.example.larkinmcmahon.geogoals.GoalList">


    <fragment
        android:id="@+id/fragment"
        android:name="com.example.larkinmcmahon.geogoals.GoalListFragment"
        tools:layout="@layout/fragment_goal_list"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        />

    <fragment
        android:id="@+id/fragment_goal_detail"
        android:name="com.example.larkinmcmahon.geogoals.GoalDetailFragment"
        tools:layout="@layout/fragment_goal_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>